# Application
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database
DATABASE_URL="postgresql://puntos_user:puntos_password@postgres:5432/puntos_ciudadanos?schema=public"

# Database connection details (for Docker)
POSTGRES_USER=puntos_user
POSTGRES_PASSWORD=puntos_password
POSTGRES_DB=puntos_ciudadanos

# Security
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:8081,http://localhost:19000
